
<div class="top_index text-center">
  <h1>VolunteerUp!</h1>
  <span>あなたに出来ることからはじめよう！</span>
</div>

<%= image_tag "vol_top.png", class: 'icon image-fluid anime_test mx-auto d-block rounded-circle' %>
<br>
<%= link_to 'はじめる', volunteers_path, class: 'btn2 mx-auto d-block' %>
<!-- btn btn-light btn-block btn-lg mx-auto d-block  -->



<style>

.anime_test {
    display:  block;                /* ブロック要素にする */
    margin: 0 auto;                 /* 要素中央揃え */
    position: relative;           /* 位置指定 */
    animation: anime1 3s ease;      /* アニメーション指定 */
    animation: anime2 180s linear infinite;
}

.top_index {
  font-weight: bold;
  animation: anime1 4s ease;
}

@keyframes anime1 {
    0% {
        opacity:  0;                /* 透明度指定 */
        top: 50px;
    }
    100% {
        opacity:  1;                /* 透明度指定 */
        top: 0;
    }
}

@keyframes anime2 {
    0% {
        transform: rotate(0deg);    /* 角度指定 */
    }
    100% {
        transform: rotate(360deg);  /* 角度指定 */
    }
}

.btn2 {
  font-size: 2rem;
  font-family: sans-serif;
  text-transform: uppercase;
  text-align: center;
  position: relative;
  text-decoration: none;

}

.btn2::before{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-color: #00FF00;
  -webkit-transform: scaleY(.3);
  transform: scaleY(.3);
  opacity: 0;
  transition: all .3s
}

.btn2:hover{
  color:#FF9872;
}
.btn2:hover::before{
  opacity: 1;
  background-color: #00FF00;
  -webkit-transform: scaleY(1);
  transform: scaleY(1);
  transition: -webkit-transform .6s cubic-bezier(.08, .35, .13, 1.02), opacity .4s;
  transition: transform .6s cubic-bezier(.08, .35, .13, 1.02), opacity
}
</style>
