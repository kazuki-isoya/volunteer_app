<h2><%= t('.sign_in') %></h2>
<div class="">
  <div class="col-sm-12 col-md-10 col-lg-8">
    <%= image_tag "volunteer_top.jpeg", class: "mx-auto d-block", size: '300x300' %>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field col-sm-12 col-md-10 col-lg-8">
      <%= f.label :email, class: "col text-center" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
    <br>
    <div class="field col-sm-12 col-md-10 col-lg-8">
      <%= f.label :password, class: "col text-center" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field col-sm-12 col-md-10 col-lg-8">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions col-sm-12 col-md-10 col-lg-8">
      <%= f.submit t('.sign_in'), class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
  <br>
  <div class="field col-sm-12 col-md-10 col-lg-8">
    <%= render "devise/sessions/testuser" %>
  </div>
  <div class="field col-sm-12 col-md-10 col-lg-8">
    <%= render "devise/shared/links" %>
  </div>
</div>
