<!DOCTYPE html>
<html>
  <head>
    <title>VolunteerApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand navbar-dark bg-dark fixed-top">
      <%= link_to "VolunteerApp", "#", id: "logo", class: "navbar-brand" %>
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item"><%= link_to "ボランティア一覧", root_path, class: "nav-link" %></li>
          <li class="nav-item">
            <%= link_to "#{current_user.name}のプロフィール", user_path(current_user.id), class: "nav-link" %>
          </li>
          <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete , class: "nav-link"%></li>
        <% else %>
          <li class="nav-item"><%= link_to "新規作成", new_user_registration_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </nav>
    <div class="alert alert-notice"><%= notice %></div>
    <div class="alert alert-notice"><%= alert %></div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
