<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "エラー") %> カテゴリーが保存できませんでした:</h2>
      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :カテゴリー名 %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :画像 %>
    <%= image_tag(@category.icon.url) if @category.icon && @category.icon.url %>
  </div>

  <div class="field">
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :定員 %>
    <%= form.text_field :capacity %>
  </div>

  <div class="field">
    <%= form.label :日時 %>
    <%= form.text_field :date %>
  </div>


  <div class="field">
    <% Category.all.each do |category| %>
      <%= form.check_box :category_ids, { multiple: true, checked: category[:checked],
         disabled: category[:disabled], include_hidden: false }, category[:id] %>
      <label><%= category.name %></label>
    <% end %>
  </div>


    <%= form.submit  class: 'btn btn-primary' %>
<% end %>
