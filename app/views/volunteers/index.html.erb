<div class="volunteers_body">
  <h1>ボランティア依頼一覧</h1>
  <table>
    <thead>
      <tr>
        <th>画像</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <div class="container">
        <% @volunteers.each do |volunteer| %>
          <tr>
            <td>タイトル:<%= volunteer.title %></td>
            <td>
              <%= link_to '詳細を確認', volunteer, class: 'btn btn-default' %>
            </td>
              <td>
                <%= link_to '依頼を変更', edit_volunteer_path(volunteer), class: 'btn btn-primary' %>
              </td>
              <td>
                <%= link_to '依頼を削除', volunteer, method: :delete, data: { confirm: '依頼を削除しますか？' }, class: 'btn btn-danger' %>
              </td>
          </tr>
        <% end %>
      </div>
    </tbody>
  </table>
</div>
<br>
<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <div class="container-fluid">
    <%= link_to '新規投稿', new_volunteer_path, class: 'btn btn-success btn-lg' %>
  </div>
</nav>
