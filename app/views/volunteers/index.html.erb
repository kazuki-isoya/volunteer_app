<div class="row">
  <div class="col-4">
    <h3>ボランティア依頼一覧</h3>
  </div>
  <div class="col-8">
    <%= render 'search_form' %>
  </div>
</div>
<%= image_tag "vol_top.jpg", class: 'icon image-fluid' %>
<br>
<br>
<div class="row">
  <div class="col-12">
    <table class="table table-hover table-responsive">
      <!-- <thead class="thead-light">
        <tr>
          <th>タイトル</th>
          <th>依頼者</th>
          <th>詳細</th>
          <th>ステータス</th>
          <th colspan="3"></th>
        </tr>
      </thead> -->
      <tbody>
        <div class="container">
          <% @volunteers.each do |volunteer| %>
            <tr>
              <td>
                <% if volunteer.image.present? %>
                  <%= image_tag volunteer.image_url, class: "top_icon" %>
                <% else %>
                  <image src="/assets/default.png" class="top_icon" >
                <% end %>
              </td>
              <td><a href="/volunteers/<%= volunteer.id %>"><%= volunteer.title.truncate(10) %></a></td>
              <td><a href="/users/<%= volunteer.user.id %>"><%= volunteer.user.name %></a></td>
              <td><%= volunteer.describe.truncate(10) %></td>
              <td><%= "受注者#{volunteer.contractors.count}人/定員#{volunteer.capacity}人" %></td>
              <td>
                <% volunteer.categories.each do |category| %>
                  <%= "・#{category.name}" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </div>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @volunteers %>
<br>
<%= link_to 'ボランティア新規登録', new_volunteer_path, class: 'btn btn-success btn-block btn-lg' %>
