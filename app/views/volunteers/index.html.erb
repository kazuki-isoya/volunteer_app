<h1>ボランティア依頼一覧</h1>
<%= render 'search_form' %>
<table>
  <thead>
    <tr>
      <th>タイトル(クリックで詳細へ)</th>
      <th>依頼者(クリックで詳細へ)</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <div class="container">
      <% @volunteers.each do |volunteer| %>
        <tr>
          <td><a href="/volunteers/<%= volunteer.id %>"><%= volunteer.title %></a></td>
          <td><a href="/users/<%= volunteer.user.id %>"><%= volunteer.user.name %></a></td>
          <% if user_signed_in? %>
            <% if volunteer.user.id == current_user.id  %>
              <td>
                <%= link_to '依頼を変更', edit_volunteer_path(volunteer), class: 'btn btn-primary' %>
              </td>
              <td>
                <%= link_to '依頼を削除', volunteer, method: :delete, data: { confirm: '依頼を削除しますか？' }, class: 'btn btn-danger' %>
              </td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </div>
  </tbody>
</table>
<%= paginate @volunteers %>
<br>
<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <div class="container-fluid">
    <%= link_to '新規投稿', new_volunteer_path, class: 'btn btn-success btn-lg' %>
  </div>
</nav>
