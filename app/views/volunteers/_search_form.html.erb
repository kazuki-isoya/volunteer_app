<div class="col-12 clearfix">
  <form class="form-inline float-right">
    <%= search_form_for(@q, url:volunteers_path) do |f| %>
      <div class="form-group mb-2">
        <label><%= f.label :title_cont, 'タイトル' %></label>
        <label><%= f.search_field :title_cont %></label>
      </div>

      <div class="form-group mx-sm-3 mb-2">
        <label><%= f.label :categories_id_eq, 'カテゴリー' %></label>
        <label>
          <%= f.collection_select :categories_id_eq, @categories, :id, :name, :include_blank => '指定なし' %>
        </label>
      </div>

      <%= f.submit ("検索") , class: "btn btn-primary mb-2" %>
    <% end %>
  </form>
</div>
