<% unless current_user == user %>
  <% if current_user.evaluating?(user) %>
    <%= form_for(current_user.good_evaluations.find_by(evaluate_user_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :evaluate_user_id, user.id %>
      <%= f.submit '評価の取り消し', data: { confirm: '評価を取り消しますか？'}, class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.good_evaluations.build) do |f| %>
      <%= hidden_field_tag :evaluate_user_id, user.id %>
      <%= f.submit '評価する', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>
